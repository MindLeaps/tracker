<%= form_with url: url, model: student, id: dom_id(student, 'form'), class: "table min-w-full bg-gray-50 px-4 border-b border-gray-200" do |form| %>
  <div class="p-4">
    <%= form.text_field :mlid, class: "block w-full rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm" %>
    <%= render ValidationErrorComponent.new(model: @student, key: :mlid) %>
  </div>
  <div class="p-4">
    <%= form.text_field :last_name, class: "block w-full rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm" %>
    <%= render ValidationErrorComponent.new(model: @student, key: :last_name) %>
  </div>
  <div class="p-4">
    <%= form.text_field :first_name, class: "block w-full rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm" %>
    <%= render ValidationErrorComponent.new(model: @student, key: :first_name) %>
  </div>
  <div class="p-4 flex justify-start gap-4">
    <div class="flex items-center">
      <%= form.radio_button :gender, :M, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student.gender == 'M' || student.gender.nil? %>
      <label for="student_gender_m" class="ml-3 text-sm font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:M] %></label>
    </div>
    <div class="flex items-center">
      <%= form.radio_button :gender, :F, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student.gender == 'F' %>
      <label for="student_gender_f" class="ml-3 text-sm font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:F] %></label>
    </div>
    <div class="flex items-center">
      <%= form.radio_button :gender, :NB, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student.gender == 'NB' %>
      <label for="student_gender_nb" class="ml-3 text-sm font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:NB] %></label>
    </div>
  </div>
  <div class="p-4 flex justify-start gap-4">
    <%= form.date_select :dob, { start_year: 1900, end_year: Date.today.year, selected: student.dob || Date.new(Date.current.year, 1, 1) }, class: 'mt-1 rounded-md border-purple-500 text-sm focus:border-green-600 focus:outline-none focus:ring-green-600' %>
    <%= render ValidationErrorComponent.new(model: @student, key: :dob) %>
  </div>
  <div class="p-4">
  </div>
  <div class="p-4">
    <%= form.submit class: "px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 cursor-pointer" %>
  </div>
<% end %>