<h1><%= @student.proper_name %></h1>
<%= t :student_has_no_images if @student.student_images.length == 0 %>
<% @student.student_images.each do |image| %>
    <div class="card student-image-card">
      <%= image_tag image.filename.medium.url, class: 'student-image card-img-top' %>
      <div class="card-block">
        <%= button_to 'Set as Profile', @student,method: :patch, params: { student: { profile_image_id: image.id } },
                      class: 'btn btn-primary', disabled: @student.profile_image_id == image.id, form_class: 'center-text' %>
      </div>
    </div>
<%- end %>

<div class="image-upload">
  <%= simple_form_for @new_image, wrapper: :horizontal_form, url: {action: :create}, html: {multipart: true} do |f| %>
      <%= f.input :filename, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, 'Upload', class: 'btn-outline-success' %>
  <%- end %>
</div>
<div class="action-buttons">
  <%= link_to 'Back to student', student_path(@student) %>
</div>
