<%= t :student_has_no_images if @images.length == 0 %>
<% @images.each do |image| %>
    <%= image_tag image.filename.url, class: 'student-image' %>
<%- end %>

<div class="image-upload">
  <%= simple_form_for @new_image, wrapper: :horizontal_form, url: {action: :create}, html: {multipart: true} do |f| %>
      <%= f.input :filename, as: :file %>
      <%= f.button :submit, 'Upload', class: 'btn-outline-success' %>
  <%- end %>
</div>
<div class="action-buttons">
  <%= link_to 'Back to student', student_path(@student) %>
</div>
