<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <meta name="google" content="notranslate" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "shared/header" %>
  <% if notice or undo_notice or link_notice or alert %>
    <div class="notices">
      <% if notice %><div class="alert-success notice"><%= notice %></div><% end %>
      <% if link_notice %><div class="alert-success notice"><%= link_notice.try :html_safe %></div><% end %>
      <% if undo_notice %><div class="alert-danger notice undo-notice"><%= undo_notice.try :html_safe %></div><% end %>
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  <section class="container main-container">
    <%= yield %>
  </section>
</body>
</html>
