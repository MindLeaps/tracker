<%- content_for :title, t(:organizations).capitalize %>

<%= render LayoutComponents::HeaderComponent.new(current_user: current_user, tabs: [
  { title: CommonComponents::TagLabel.new(label: t(:organizations).capitalize, img_src: 'world.svg'), href: '' }
], buttons: [
  (CommonComponents::ButtonComponent.new(label: t(:add_organization), href: new_organization_path, options: { data: { turbo_stream: true } }) if policy(Organization).new?)
].compact) %>

<div id="new_organization"></div>

<%= render TableComponents::Table.new(pagy: @pagy, rows: @organizations, row_component: TableComponents::OrganizationRow) do |t|
  t.with_left do %>
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <%= render SearchFormComponent.new(search: { term: params[:search] }, query_parameters: request.query_parameters) %>
      </div>
      <div class="flex-1 px-4">
        <%= render CommonComponents::CheckboxLink.new(label: t(:show_deleted), checked: !excluding_deleted?, href: show_deleted_url) %>
      </div>
    </div>
  <% end
     end
  %>
