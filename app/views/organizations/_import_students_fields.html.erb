<div class="<%= 'shaded-cell' if index.even? %> table-cell">
  <%= text_field_tag "students[#{index}][first_name]", student[:first_name], class: "w-fit rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 text-xs" %>
  <%= render ValidationErrorComponent.new(model: student, key: :first_name) %>
</div>
<div class="<%= 'shaded-cell' if index.even? %> table-cell">
  <%= text_field_tag "students[#{index}][last_name]", student[:last_name], class: "w-fit rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 text-xs" %>
  <%= render ValidationErrorComponent.new(model: student, key: :last_name) %>
</div>
<div class="<%= 'shaded-cell' if index.even? %> table-cell text-right">
  <div class="inline-flex items-center h-full">
    <%= radio_button_tag "students[#{index}][gender]", :M, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student[:gender] == 'M' || student[:gender].nil? %>
    <label class="ml-1 text-xs font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:M] %></label>
  </div>
  <div class="inline-flex items-center h-full">
    <%= radio_button_tag "students[#{index}][gender]", :F, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student[:gender] == 'F' %>
    <label class="ml-1 text-xs font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:F] %></label>
  </div>
  <div class="inline-flex items-center h-full">
    <%= radio_button_tag "students[#{index}][gender]", :NB, class: 'h-4 w-4 border-purple-500 text-green-600 focus:ring-green-600 cursor-pointer', checked: student[:gender] == 'NB' %>
    <label class="ml-1 text-xs font-medium text-gray-700 cursor-pointer"><%= t(:enums)[:student][:gender][:NB] %></label>
  </div>
</div>
<div class="<%= 'shaded-cell' if index.even? %> table-cell flex justify-start gap-4 items-center">
  <%= render Datepicker.new(date: student[:dob] || Date.new(Date.current.year, 1, 1), target: 'dob', custom_name: "students[#{index}][dob]",
                            custom_class: 'w-fit rounded-md border-purple-500 focus:border-green-600 focus:outline-hidden focus:ring-green-600 text-xs') %>
  <%= render ValidationErrorComponent.new(model: student, key: :dob) %>
</div>
