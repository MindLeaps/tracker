table class="mdl-data-table mdl-js-data-table resource-table"
  thead
    == render partial: 'shared/pagy_nav', locals: { pagy: pagy, resource: 'groups', span: 4 }
    tr
      th
        | #
      == render partial: 'shared/ordered_column', locals: { order_key: :group_name, column_name: 'Group Name' }
      th class="mdl-data-table__cell--non-numeric"
        | Chapter
      th
        | Number of Students
  - groups.each_with_index do |group, i|
    tr class="resource-row group-row"
      td
        = link_to pagy.from + i, group_path(group)
      td.mdl-data-table__cell--non-numeric
        = link_to group.group_name, group
      td.mdl-data-table__cell--non-numeric
        = link_to group_chapter_name(group), group
      td
        = link_to group.students.length, group
