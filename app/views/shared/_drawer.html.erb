    <%= render partial: "shared/main_nav_item", locals: {name: "Users", icon:'contacts', url: main_app.users_path} %>
    <%= render partial: "shared/main_nav_item", locals: {name: "Lessons", icon: 'assignment', url: main_app.lessons_path} %>
    <%= render partial: "shared/main_nav_item", locals: {name: "Subjects", icon: 'local_library', url: main_app.subjects_path} %>
