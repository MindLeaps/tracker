<h3>Lesson in <%= @lesson.subject.subject_name %></h3>

<h6>on <%= @lesson.date %></h6>
<h6>Group: <%= @lesson.group.group_name %></h6>

<h3>Students</h3>
<table class="table table-striped table-hover resource-table students-grade-table">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th class="text-xs-center">Average Grade</th>
    </tr>
  </thead>
  <% @lesson.group.students.each do |student| %>
    <tr class="resource-row student-grade-row">
        <td><a class="resource-row-link student-grade-row-link"><%= student.last_name %></a></td>
        <td><a class="resource-row-link student-grade-row-link"><%= student.first_name %></a></td>
        <td><a class="resource-row-link student-grade-row-link text-xs-center">Not Graded</a></td>
    </tr>
  <% end %>
</table>
