<h1>New Student</h1>
<fieldset>
  <%= form_for :student, url: {action: "create"} do |form| %>
    <%= render partial: 'shared/errors', locals: {subject: @student} %>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
    <%= form.label :dob %>
    <%= form.date_select :dob, {start_year: 1990, end_year: Date.today.year} %>
    <%= form.label :estimated_dob %>
    <%= form.check_box :estimated_dob, {} %>
    <%= form.submit 'Create' %>
  <%- end %>
</fieldset>
<% @students.each do |student| %>
  <p><%= student.last_name %>, <%= student.first_name %> - DOB: <%= student.dob %> <%= student.estimated_dob ? "EST" : "" %></p>
<% end %>
