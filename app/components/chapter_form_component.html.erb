<%= form_with model: @chapter, class: 'space-y-0.5' do |f| %>
  <div class="bg-white px-4 py-5 shadow sm:p-4">
    <div class="md:grid md:grid-cols-4 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900"><%= t(:chapter_information) %></h3>
      </div>
      <div class="mt-5 md:col-span-3 md:mt-0">
        <div class="grid grid-cols-6 gap-4">
          <div class="col-span-6 lg:col-span-2">
            <%= f.label :chapter_name, class: 'field-label' %>
            <%= f.text_field :chapter_name, autofocus: true, class: 'mt-1 block w-full rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm' %>
            <%= render ValidationErrorComponent.new(model: @chapter, key: :chapter_name) %>
          </div>
          <div class="col-span-6 lg:col-span-2">
            <%= f.label :organization, class: 'field-label' %>
            <%= f.collection_select :organization_id, @permitted_organizations, :id, :organization_name, {}, class: 'mt-1 block w-full rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm' %>
            <%= render ValidationErrorComponent.new(model: @chapter, key: :organization) %>
          </div>
          <div class="col-span-6 lg:col-span-2">
            <%= f.label :mlid, class: 'field-label' %>
            <%= f.text_field :mlid, class: 'mt-1 block rounded-md border-purple-500 shadow-sm focus:border-green-600 focus:ring-green-600 sm:text-sm uppercase', maxlength: 2, size: 4 %>
            <%= render ValidationErrorComponent.new(model: @chapter, key: :mlid) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-white px-4 py-5 shadow sm:p-4">
    <div class="md:grid md:grid-cols-4 md:gap-6">
      <div class="md:col-span-1"></div>
      <div class="mt-5 md:col-span-3 md:mt-0">
        <div class="grid grid-cols-6 gap-4">
          <div class="col-span-6 lg:col-span-4">
            <%= f.submit class: 'normal-button' %>
            <% if @cancel %>
              <%= link_to t(:cancel), nil, class: 'dangerous-button', data: { action: 'click->transition#close' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
