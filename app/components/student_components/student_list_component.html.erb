<div class="mt-10 sm:hidden">
  <ul role="list" class="mt-3 border-t border-gray-200 divide-y divide-gray-100">
    <% @student_rows.each do |student_row| %>
      <li>
        <a href="<%= student_path student_row %>" class="group flex items-center justify-between px-4 py-4 hover:bg-gray-50 sm:px-6">
                <span class="flex items-center truncate space-x-3">
                  <span class="font-medium truncate text-sm leading-6">
                    <%= student_row.full_mlid %>
                    <span class="truncate font-normal text-gray-500"><%= "#{student_row.last_name}, #{student_row.first_name}" %></span>
                  </span>
                </span>
          <!-- Heroicon name: solid/chevron-right -->
          <svg class="ml-4 h-5 w-5 text-gray-400 group-hover:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
    <% end %>

    <!-- More projects... -->
  </ul>
</div>