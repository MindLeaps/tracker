<tr class="resource-row <%= @student.deleted_at ? 'deleted-row' : nil %>">
  <td class="mdl-data-table__cell"><%= link_to @pagy.from + @student_counter, @student_show %></td>
  <td class="mdl-data-table__cell"><a href="<%= @student_show %>">
    <span class="faded"><%= "#{@student.organization_mlid}-#{@student.chapter_mlid}-#{@student.group_mlid}-" %></span><%= @student.mlid %>
  </a></td>
  <td class="mdl-data-table__cell--non-numeric"><%= link_to @student.last_name, @student_show %></td>
  <td class="mdl-data-table__cell--non-numeric"><%= link_to @student.first_name, @student_show %></td>
  <td class="mdl-data-table__cell--non-numeric"><%= link_to @student.gender_i18n, @student_show %></td>
  <td class="mdl-data-table__cell"><%= link_to "#{@student.estimated_dob ? t(:circa) : ''}#{@student.dob}", @student_show %></td>
  <td class="mdl-data-table__cell--non-numeric"><a href="<%= @student_show %>">
    <% @student.tags.each do |tag|%><span class="mdl-chip"><span class="mdl-chip__text"><%= tag.tag_name %></span></span><% end %>
  </a></td>
  <td class="mdl-data-table__cell--non-numeric"><%= link_to @student_group_name, @student_show %></td>
  <td><%= sanitize render_actions %></td>
</tr>
