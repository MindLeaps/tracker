<th class="<%= column_class %>">
  <%= link_to order_parameters(@order_key), id: "#{@order_key}-order" do %>
    <%= @column_name %>
    <%= inline_svg_tag order_icon(@order_key) %>
  <% end %>
  <div class="mdl-tooltip" data-mdl-for="<%= @order_key %>-order">
    <%= "Change order to #{@column_name} #{order_for(@order_key) == 'asc' ? 'Descending' : 'Ascending'}" %>
  </div>
</th>
