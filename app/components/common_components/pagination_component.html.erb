<nav class="flex items-center justify-center bg-white">
  <div class="px-2">
    <a href="<%= first_url %>" class="first_page border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.prev %>">
      <%= inline_svg_tag 'double-arrow-left.svg', class: 'mr-3 h-5 w-5' %>
    </a>
  </div>
  <div class="px-2">
    <a href="<%= previous_url %>" class="previous-page border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.prev %>">
      <%= inline_svg_tag 'arrow-left.svg', class: 'mr-3 h-5 w-5' %>
    </a>
  </div>
  <div class="px-4 w-max text-center">
    <span class="w-max border-b-2 border-transparent inline-flex font-medium text-gray-600 py-4 text-sm"><%= t(:pagination_display, from: @pagy.from, to: @pagy.to, total: @pagy.count) %></span>
  </div>
  <div class="px-2">
    <a href="<%= next_url %>" class="next-page border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.next %>">
      <%= inline_svg_tag 'arrow-right.svg', class: 'ml-3 h-5 w-5' %>
    </a>
  </div>
  <div class="px-2">
    <a href="<%= last_url %>" class="last-page border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.next %>">
      <%= inline_svg_tag 'double-arrow-right.svg', class: 'ml-3 h-5 w-5' %>
    </a>
  </div>
</nav>
