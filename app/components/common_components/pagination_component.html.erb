<nav class="border-b border-gray-200 flex items-center justify-center bg-white">
  <div class="px-4">
    <a href="<%= first_url %>" class="border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.prev %>">
      <%= inline_svg_tag 'double-arrow-left.svg', class: 'mr-3 h-5 w-5' %>
      First
    </a>
  </div>
  <div class="px-4">
    <a href="<%= previous_url %>" class="border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.prev %>">
      <%= inline_svg_tag 'arrow-left.svg', class: 'mr-3 h-5 w-5' %>
      Previous
    </a>
  </div>
  <div class="px-8 w-max text-center">
    <span class="w-max border-b-2 border-transparent inline-flex font-medium text-gray-600 py-4 text-sm"><%= t(:pagination_display, from: @pagy.from, to: @pagy.to, total: @pagy.count) %></span>
  </div>
  <div class="px-4">
    <a href="<%= next_url %>" class="border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.next %>">
      Next
      <%= inline_svg_tag 'arrow-right.svg', class: 'ml-3 h-5 w-5' %>
    </a>
  </div>
  <div class="px-4">
    <a href="<%= last_url %>" class="border-b-2 border-transparent py-4 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-green-700 <%= 'pointer-events-none text-gray-300' unless @pagy.next %>">
      Last
      <%= inline_svg_tag 'double-arrow-right.svg', class: 'ml-3 h-5 w-5' %>
    </a>
  </div>
</nav>
