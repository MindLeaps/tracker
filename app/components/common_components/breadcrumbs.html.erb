<nav class="flex ml-6" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center">
    <% @crumbs.each_with_index do |crumb, i| %>
      <li class="ml-0">
        <div class="flex items-center">
          <a href="<%= crumb[:href] %>" class="text-sm font-medium text-gray-500 hover:text-gray-700 stroke-gray-500 hover:stroke-gray-700 inline-flex">
            <%= render_label crumb[:label] %>
          </a>
          <% if @current || i != @crumbs.size - 1 %>
          <svg class="shrink-0 h-5 w-5 m-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          <% end %>
        </div>
      </li>
    <% end %>
    <% if @current %>
    <li>
      <div class="flex items-center">
        <a href="" class="pointer-events-none font-medium border-green-700 text-gray-800 stroke-gray-800 inline-flex" aria-current="page">
          <%= render_label @current[:label] %>
        </a>
      </div>
    </li>
      <% end %>
  </ol>
</nav>
