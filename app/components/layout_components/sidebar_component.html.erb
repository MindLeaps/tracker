<div class="fixed inset-0 flex z-40 lg:hidden" role="dialog" aria-modal="true" data-mobile-target="root">
  <div class="fixed inset-0 bg-gray-600 bg-opacity-75 transition-opacity ease-linear duration-300 opacity-0" aria-hidden="true" data-mobile-target="overlay" data-action="click->mobile#closeSidebar"></div>
  <div class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-white transition ease-in-out duration-300 transform -translate-x-full" data-mobile-target="sidebar">
    <div class="absolute top-0 right-0 -mr-12 pt-2 transform ease-in-out duration-300">
      <button data-action="click->mobile#closeSidebar" data-mobile-target="button" type="button" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white opacity-0">
        <span class="sr-only"><%= t(:close_sidebar) %></span>
        <!-- Heroicon name: outline/x -->
        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div class="flex-shrink-0 flex items-center justify-center px-4">
      <%= image_tag 'mindleaps_logo_transparent.png', class: 'w-1/2' %>
    </div>
    <div class="mt-5 flex-1 h-0 overflow-y-auto">
      <nav class="px-2">
        <div class="space-y-1">
          <!-- Current: "bg-gray-100 text-gray-900", Default: "text-gray-600 hover:text-gray-900 hover:bg-gray-50" -->
          <%= render LayoutComponents::NavItemComponent.new name: "Students", svg_icon: 'person.svg', url: students_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Groups", svg_icon: 'group.svg', url: groups_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Chapters", svg_icon: 'dvr.svg', url: chapters_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Organizations", svg_icon: 'public.svg', url: organizations_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Users", svg_icon:'contacts.svg', url: users_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Lessons", svg_icon: 'assignment.svg', url: lessons_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Subjects", svg_icon: 'local_library.svg', url: subjects_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Skills", svg_icon: 'lightbulb_outline.svg', url: skills_path %>
          <%= render LayoutComponents::NavItemComponent.new name: "Analytics", svg_icon: 'insert_chart.svg', url: general_analytics_path %>
        </div>
      </nav>
      </nav>
    </div>
  </div>
</div>


