<div class="<%= 'shaded-row' if shaded? %> table-row-wrapper">
  <a href="<%= helpers.lesson_path @item %>" class="<%= 'shaded-row' if shaded? %> table-row-wrapper">
    <div class="table-cell "><%= @pagy.from + @item_counter %></div>
    <div class="text-right table-cell truncate "><%= "#{@item.group_name} - #{@item.chapter_name}" %></div>
    <div class="table-cell "><%= @item.date %></div>
    <div class="text-right table-cell "><%= @item.subject_name %></div>
    <div class="table-cell "><%= "#{@item.graded_student_count} / #{@item.group_student_count}" %></div>
    <div class="table-cell "><%= @item.average_mark %></div>
  </a>
</div>
