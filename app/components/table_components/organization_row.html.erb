<div class="<%= 'shaded-row' if shaded? %> table-row-wrapper">
  <a href="<%= helpers.organization_path @item %>" class="<%= 'shaded-row' if shaded? %> table-row-wrapper">
    <div class="px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "><%= @pagy.from + @item_counter - 1 %></div>
    <div class="px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "></span><%= @item.organization_mlid %></div>
    <div class="text-right px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "><%= @item.organization_name %></div>
    <div class="px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "><%= @item.chapter_count %></div>
    <div class="px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "><%= @item.group_count %></div>
    <div class="px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 "><%= @item.student_count %></div>
    <div class="text-right px-6 py-3 whitespace-nowrap text-sm font-medium text-gray-600 ">
      <% if can_update? %>
        <a id="edit-button-<%= @item_counter %>" class="table-action-link" href="<%= helpers.edit_organization_path(@item) %>"><%= t(:edit) %></a>
      <% end %>
    </div>
  </a>
</div>
